{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "server/data/*"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "watch": [
    "env.js",
    "config/",
    "client/public/",
    "server/controllers/",
    "server/middleware/",
    "server/plugins/",
    "server/routes/",
    "server/views/",
    "server/app.server.js",
    "server/start.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "twig"
}