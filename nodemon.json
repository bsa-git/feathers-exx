{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "server/data/**"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "watch": [
    "env.js",
    "config/",
    "client/public/",
    "server/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "twig"
}