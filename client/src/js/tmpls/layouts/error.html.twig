<article class="message is-danger">
    <div class="message-header">
        <p>{% if error.name %}{{ error.name }}{% else %}Error{% endif %}</p>
        <button class="delete" aria-label="delete"></button>
    </div>
    <div class="message-body content">
        <div class="has-text-centered">
            <div class="is-size-3"><strong>{{ error.message }}</strong></div>
            <div class="is-size-4">{% if error.code %}Code: {{ error.code }}; {% endif %}{% if error.type %}Type: {{ error.type }}; {% endif %}</div>
        </div>
        <div class="is-size-6">{% if error.stack %}Stack: <pre>{{ error.stack }}</pre> {% endif %}</div>
    </div>
</article>

